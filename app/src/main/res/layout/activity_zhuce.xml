<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_marginLeft="40dp"
            android:layout_width="280dp"
            android:layout_height="450dp"
            android:background="@drawable/bac">
            <ImageView
                android:src="@drawable/camera1"
                android:id="@+id/take_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/picture"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="400dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="40dp"
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"/>
                    <EditText
                        android:id="@+id/name_edit"
                        android:layout_below="@+id/name"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="-10dp"
                        android:layout_width="250dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄"
                        android:layout_below="@id/name"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"/>
                    <EditText
                        android:id="@+id/age_edit"
                        android:layout_below="@+id/name"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="250dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱好"
                        android:layout_below="@+id/age"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp" />
                    <EditText
                        android:id="@+id/hobby_edit"
                        android:layout_below="@+id/age"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="250dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话"
                        android:layout_below="@+id/hobby"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"/>
                    <EditText
                        android:id="@+id/tel_edit"
                        android:layout_below="@+id/hobby"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="250dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:layout_below="@+id/tel"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="40dp"/>
                    <EditText
                        android:id="@+id/email_edit"
                        android:layout_below="@+id/tel"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="250dp"
                        android:layout_height="20dp" />
                    <Button
                        android:id="@+id/zhucebutton"
                        android:text="确认"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email"
                        android:background="#3EFFFFFF"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="90dp"/>

                    <Button
                        android:id="@+id/button_daohang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/zhucebutton"
                        android:background="#3EFFFFFF"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="90dp"/>
                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>